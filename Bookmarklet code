javascript:(function () {
    const host = location.hostname;
    const path = location.pathname;

    // Redirect if on specific website
    if (host.includes("[Enter website name]")) {
        location.href = "[enter redirect page"; // Default is just the github project
        return;
    }

    // If on YouTube Shorts, redirect after 5 minutes
    if (host.includes("youtube.com") && path.startsWith("/shorts")) {
        setTimeout(() => {
            if (location.hostname.includes("youtube.com") && location.pathname.startsWith("/shorts")) {
                location.href = "stop_scrolling.html";
            }
        }, 300000); // 5 minutes in milliseconds
    }
})();
